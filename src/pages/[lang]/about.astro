---
import type { Lang } from "@/i18n";
import { LANGS, t } from "@/i18n";
import BaseLayout from "@/layouts/BaseLayout.astro";

export async function getStaticPaths() {
  return LANGS.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Lang };
---

<BaseLayout
  lang={lang}
  path="/about"
  title={`${t(lang, "about.title")} | Latife`}
  description="About Latife Belgrade"
>
  <h1 class="font-display text-4xl">{t(lang, "about.title")}</h1>

  <div class="mt-6 grid gap-6 md:grid-cols-2">
    <div class="rounded-3xl bg-white p-7 shadow-ring">
      <p class="text-muted">{t(lang, "about.p1")}</p>
      <p class="mt-4 text-muted">{t(lang, "about.p2")}</p>
    </div>

    <!-- Premium Gallery -->
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-5">
      <!-- 1 -->
      <figure class="group relative overflow-hidden rounded-3xl bg-white shadow-ring">
        <div class="relative aspect-[4/3] w-full">
          <img
            src="/images/venue-3.jpg"
            alt="Latife interior detail"
            class="absolute inset-0 h-full w-full object-cover object-center transition duration-500 group-hover:scale-[1.04]"
            loading="lazy"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-tr from-black/18 via-transparent to-transparent"></div>
          <div class="absolute inset-0 [box-shadow:inset_0_0_80px_rgba(0,0,0,.18)]"></div>
        </div>
      </figure>

      <!-- 2 -->
      <figure class="group relative overflow-hidden rounded-3xl bg-white shadow-ring">
        <div class="relative aspect-[4/3] w-full">
          <img
            src="/images/front-2.jpg"
            alt="Latife entrance"
            class="absolute inset-0 h-full w-full object-cover object-center transition duration-500 group-hover:scale-[1.04]"
            loading="lazy"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-tr from-black/18 via-transparent to-transparent"></div>
          <div class="absolute inset-0 [box-shadow:inset_0_0_80px_rgba(0,0,0,.18)]"></div>
        </div>
      </figure>

      <!-- 3 (Big) - Balanced size (no blur, no empty space) -->
      <figure class="group relative overflow-hidden rounded-3xl bg-white shadow-ring md:col-span-2">
        <div class="relative aspect-[16/9] w-full">
          <img
            src="/images/coffee-2.jpg"
            alt="Coffee"
            class="absolute inset-0 h-full w-full object-cover object-[50%_40%] transition duration-500 group-hover:scale-[1.02]"
            loading="lazy"
            decoding="async"
          />
          <div class="absolute inset-0 bg-gradient-to-tr from-black/16 via-transparent to-transparent"></div>
          <div class="absolute inset-0 [box-shadow:inset_0_0_90px_rgba(0,0,0,.16)]"></div>
        </div>
      </figure>
    </div>
  </div>
</BaseLayout>
